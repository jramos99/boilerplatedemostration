div(class="ed-grid s-grid-5 section-main-container")
	div(class="s-cols-5 m-cols-3 ed-grid s-grid-4 options-container")
		div(class="video-container s-cols-4 m-cols-3 m-rows-2")
			div(class="video-container-box")
				video(src="assets/img/como-hacer-tus-apuestas.mp4" controls)
		- for(i = 0; i < galeria.length; i++)
			div(class="s-cols-2 m-cols-1")
				img(src= `${galeria[i].img}`, alt=`${galeria[i].name}` value=galeria[i].video)
				p= galeria[i].name
	div(class="s-cols-5 m-cols-2")
		- for(i = 0; i < dudas.length; i++)
			div.options
				img(src= dudas[i].link, alt=`${dudas[i].link}`)
				p= dudas[i].name
