extends ../config/template
append config
	-currentPage		= "home"
	-siteName			= 'kikeestrada'
	-content			= 'content'
	-pageDescription	= 'This website contains a collection of projects developed by Enrique Estrada using a Gulp boilerplate developed by him'
block main-header
block main-container 
	div
		div(class='container ed-grid s-grid-4')
			div(class='container s-cols-4')
				div(class='container__slider ')
					div(class='tns-single' id='tnsSingle')
						-for(var i = 0; i < slides.length ; i++)
							div: div(class='tns-single__content'): img(src=`${slides[i].link}`, alt=`${slides[i].name}`)

			div(class='container__signup s-cols-2')
					h1 sugnup
block main-footer
block scripts
